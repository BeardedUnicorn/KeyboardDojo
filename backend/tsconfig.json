{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".build",
    "rootDir": "./",
    "sourceMap": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", ".serverless", ".build"]
} 